// [START view]
extends ../base.jade

block content
  h3 Track
    small

  .btn-group
    a(href="/tracks/#{book.id}/edit", class='btn btn-primary btn-sm')
      i.glyphicon.glyphicon-edit
      span  Edit track
    a(href="/tracks/#{book.id}/delete", class='btn btn-danger btn-sm')
      i.glyphicon.glyphicon-trash
      span  Delete track

  .media
    .media-left
      audio(controls='')
        source(src=book.imageUrl || 'http://media.w3.org/2010/07/bunny/04-Death_Becomes_Fur.mp4')
    .media-body
      h4= book.title
        | &nbsp;
        small= book.publishedDate
      h5 By #{book.author||'unknown'}
      p= book.description
      small Added by #{book.createdBy}
// [END view]
